<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:c="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:ui="sap.ui">
	<P13nDialog ok="onFrgSave" cancel="onFrgCancel" class="sapUiSizeCompact" title="Information Employee">
        <sap.ui.layout:Grid xmlns:sap.ui.layout="sap.ui.layout" defaultSpan="XL12 L12 M12 S12" width="100%" containerQuery="false"
			hSpacing="0" position="Center" vSpacing="0" visible="true">
			<sap.ui.layout:content>
				<f:SimpleForm id="sf_frg_employee" editable="true" layout="ResponsiveGridLayout" maxContainerCols="2" labelSpanS="3" columnsL="5"
					emptySpanS="0" class="editableForm">
					<f:content>
						<Label text="ID"/>
						<Input id="frg_id" value="" placeholder="ID" maxLength="10" enabled="false" />
						<Label text="Name"/>
						<Input id="frg_name" value="" placeholder="Name" maxLength="40"/>
						<Label text="Address"/>
						<Input id="frag_address" value="" placeholder="Address" maxLength="100"/>
						<Label text="Phone"/>
						<Input id="frag_phone" value="" placeholder="PHone" maxLength="15"/>
						<Label text=""/>
					</f:content>
				</f:SimpleForm>
			</sap.ui.layout:content>
		</sap.ui.layout:Grid>
    </P13nDialog>
</core:FragmentDefinition>